</Layout>

<style>
  body {
    background-color: var(--bg-peach);
  }
  main {
    /* margin-top: 9rem; */
  }
  h2 {
    text-align: center;
    padding-top: 7rem;
    padding-right: 1rem;
  }
  .solh1 {
    display: grid;
    place-items: center;
  }
  .solh1 img {
    grid-area: 1/1/2/2;
  }
  .solh1 h1 {
    grid-area: 1/1/2/2;
  }
  .artist_grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    margin-inline: 5rem;
    justify-items: center;
    margin-bottom: 6rem;
    /* position: relative; */
  }
  .leftside {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 21rem 11rem 6rem 21rem 10rem 7rem 21rem;
    position: relative;
    /* padding-inline: 10rem; */
    width: 80%;
  }
  .rightside {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 10rem 7rem 21rem 10rem 7rem 22rem 10rem;
    position: relative;
    width: 80%;
  }
  .leftside :nth-child(2n + 1) {
    justify-self: right;
    position: relative;
  }
  .leftside :nth-child(2n + 2) {
    justify-self: left;
    position: relative;
  }
  .rightside :nth-child(2n + 1) {
    justify-self: right;
    position: relative;
  }
  .rightside :nth-child(2n + 2) {
    justify-self: left;
    position: relative;
  }
  .line {
    width: 5px;
    height: 100%;
    border-radius: 3px;
    background-color: #ffae3b;
    grid-area: 1/2/10/3;
  }
  h1 {
    font-family: var(--ff-head);
    font-weight: var(--fw-xb);
    font-size: 8rem;
  }
  h2 {
    font-family: var(--ff-head);
    font-weight: var(--fw-b);
    font-size: 3rem;
  }
  .cd {
    margin-right: 4rem;
  }
  p {
    text-align: center;
    margin-top: 3rem;
    font-size: 4.5rem;
    font-family: var(--ff-text);
    font-weight: var(--fw-b);
    color: var(--white);
    text-shadow: #000 0px 0px 2px, #000 0px 0px 2px, #000 0px 0px 2px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px, #000 0px 0px 1px;
  }
  @media (max-width: 1250px) {
  }
  @media (max-width: 930px) {
    .leftside {
      width: 90%;
      grid-template-rows: repeat(7, 17rem);
    }
    .rightside {
      width: 90%;
      grid-template-rows: repeat(8, 17rem);
    }
    h2 {
      padding-top: 9rem;
      font-size: 2.5rem;
      padding-right: 0.5rem;
    }
    .solh1 img {
      height: 400px;
    }
    .solh1 h1 {
      font-size: 7rem;
    }
  }
  @media (max-width: 750px) {
    .artist_grid {
      grid-template-columns: 1fr;
    }
    .line {
      display: none;
    }
    .leftside {
      width: 100%;
      gap: 0.5rem;
      grid-template-rows: auto;
    }
    .rightside {
      width: 100%;
      gap: 0.5rem;
      grid-template-rows: auto;
    }
    .rightside :nth-child(2n + 2) {
      justify-self: right;
      /* top: -3rem; */
      /* margin-top: -2rem; */
    }
    .rightside :nth-child(2n + 1) {
      justify-self: left;
      /* margin-top: -4rem; */
      /* top: -2rem; */
    }
    h2 {
      padding-top: 7rem;
      font-size: 2rem;
    }
    .solh1 img {
      height: 350px;
    }
    .solh1 h1 {
      font-size: 6rem;
    }
    p {
      text-align: center;
      margin-top: 2rem;
      font-size: 3.5rem;
    }
  }
  @media (max-width: 500px) {
    h2 {
      padding-top: 7rem;
      font-size: 2rem;
    }
    .solh1 img {
      height: 300px;
    }
    .solh1 h1 {
      font-size: 5rem;
    }
    p {
      text-align: center;
      margin-top: 1rem;
      font-size: 2.5rem;
    }
  }
  @media (max-width: 375px) {
    h2 {
      padding-top: 5rem;
      font-size: 1.5rem;
    }
    .solh1 img {
      height: 250px;
    }
    .solh1 h1 {
      font-size: 4rem;
    }
  }
</style>
