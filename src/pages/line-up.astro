<Layout title="Line-up">
  <main>
    <h2>19/7-23/7</h2>
    <div class="solh1">
      <img src="/img/sol.webp" alt="" />
      <h1>LINE-UP</h1>
    </div>
    <div class="artist_grid">
      <div class="line"></div>
      <div class="leftside">
        {
          data.map((act) => {
            return (
              <a href="#">
                <ArtistCard image={act.image} name={act.name} genre={act.genre} size={act.size} />
              </a>
            );
          })
        }
      </div>
      <div class="rightside">
        {
          data2.map((act) => {
            return (
              <a href="#">
                <ArtistCard image={act.image} name={act.name} genre={act.genre} size={act.size} />
              </a>
            );
          })
        }
