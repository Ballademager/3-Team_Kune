<div class="card">
  <p class="name">Liam Gallagher</p>
  <p class="genre">Rock</p>
</div>

<style>
  .card {
    position: relative;
    background-color: #fff;
    background-image: url(/img/COLOURBOX3764379.jpg);
    background-size: cover;
    background-position: center;
    overflow: hidden;
    aspect-ratio: 1/1;
    /* width: 15rem; */
    border-radius: 50%;
  }
  img {
    width: 100%;
    height: auto;
  }
  p {
    color: var(--white);
    font-family: var(--ff-head);
    font-weight: var(--fw-b);
    font-size: 2.5rem;
    z-index: 2;
  }
  .name {
    position: relative;
    top: 60%;
    text-align: center;
    transition: 0.3s ease-out;
  }
  .genre {
    position: relative;
    text-align: center;
    top: 90%;
    transition: 0.3s ease-out;
  }
  .genre.hidden {
    /* dis */
  }
  .card:hover .name {
    top: 45%;
  }
  .card:hover .genre {
    top: 48%;
  }
  .card:hover {
    filter: opacity(0.7);
  }
  .card:hover:after {
    content: "";
    position: absolute;
    display: block;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(107, 107, 107, 0.5);
    border-radius: 50%;
    /* z-index: 2; */
  }
  .card:hover p {
    opacity: 1;
    color: var(--black);
  }
</style>
