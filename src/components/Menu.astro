<div class="menu_container">
  <button class="burger">
    <div class="bar"></div>
  </button>
</div>
<script src="../scripts/burger.js"></script>
<style>
  .burger {
    display: block;
    width: 4rem;
    /* height: 2.5rem; */
    padding: 0;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
  }
  .burger .bar,
  .burger::before,
  .burger::after {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    border-radius: 5px;
    background-color: var(--white);
    margin: 0 0 11px 0px;
    transition: 0.8s;
  }
  .burger::after {
    margin: 0;
  }
  .burger.is-active::before {
    transform: rotate(45deg) translate(12px, 12px);
  }
  .burger.is-active::after {
    transform: rotate(-45deg) translate(10px, -11px);
  }
  .burger.is-active .bar {
    opacity: 0;
  }
</style>
